<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".7">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:src="@drawable/blue_thumb"/>

            <TextView
                android:id="@+id/no_of_up_votes"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="15"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:src="@drawable/blue_comment" />

            <TextView

                android:id="@+id/no_of_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="15"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of question goes here"
                android:gravity="start"
                android:textColor="#2286C8"
                android:textSize="14sp"
                android:textStyle="bold"

                style="@style/TextAppearance.AppCompat.Small"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/tag_1"
                android:textSize="12sp"
                android:background="#E9E9E9"
                android:textColor="#1678D8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="  tag1  "
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tag_2"
                android:textSize="12sp"
                android:background="#E9E9E9"
                android:textColor="#1678D8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tag_1"
                android:layout_toEndOf="@id/tag_1"
                android:text="  tag2  "
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tag_3"
                android:textSize="12sp"
                android:background="#E9E9E9"
                android:textColor="#1678D8"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tag_1"
                android:layout_toEndOf="@id/tag_2"
                android:text="  tag3  "
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView


                android:id="@+id/time_of_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 minutes ago"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/tag_1"
                android:textSize="12sp"/>


        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>